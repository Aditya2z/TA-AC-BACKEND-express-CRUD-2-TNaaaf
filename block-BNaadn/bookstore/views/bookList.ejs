<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book List</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <% include partials/header.ejs %>
    <div class="container">
      <div class="title">
        <h1>Book List</h1>
      </div>
      <a href="/books/new" class="btn-green">Add Book</a>
      <a href="/books/find" class="btn-blue">Find books</a>
      <ul class="booklist">
        <% books.forEach(function(book) { %>
        <li>
          <div class="card">
            <img src="<%= book.cover_image%>" alt="Cover Image">
            <h3><%= book.title %></h3>
            <a href="/books/<%= book._id %>" class="btn-green">Book Details</a>
          </div>
        </li>
        <% }) %>
      </ul>
    </div>
    <% include partials/footer.ejs %>
  </body>
</html>
